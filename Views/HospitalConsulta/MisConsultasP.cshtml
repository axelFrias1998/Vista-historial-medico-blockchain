@model Vista_historial_medico_blockchain.Models.MiCalendarioConsultasDTO
@{
    ViewData["Title"] = "Home Page";
}

<br><h1>Tus consultas</h1>
<div class="table100 ver1 m-b-110">
	<div class="table100-head">
		<table>
            <thead>
			<tr class="row100 head">
				<th class="cell100" colspan="2"><center><h5>@Html.DisplayNameFor(model => model.MisConsultas)</h5> </center> </th>
			</tr>
            </thead>
            <tbody>	
            @foreach (var item in Model.MisConsultas)
            {
             <tr class="row100 body">
				<td class="cell100"><b>Doctor:</b></td>
                <td class="cell100"> @Html.DisplayFor(modelItem => item.NombreDoctor)</td>
    		</tr>
            <tr class="row100 body">
				<td class="cell100"><b>Hospital:</b></td>
                <td class="cell100"> @Html.DisplayFor(modelItem => item.NombreHospital)</td>
    		</tr>
            <tr class="row100 body">
				<td class="cell100"><b>Fecha:</b></td>
                <td class="cell100"> @Html.DisplayFor(modelItem => item.FechaConsulta)</td>
    		</tr>
            <tr>
                <td  colspan="2"><hr></td>
            </tr>   
            }	
            </tbody>
        </table>	
	</div>
</div>

<div class="table100 ver1 m-b-110">
	<div class="table100-head">
 		<table>
            <thead>
                <tr class="row100 head">
                    <th class="cell100" colspan="2"><center><h5>@Html.DisplayNameFor(model => model.MisMedicamentos)</h5> </center> </th>
                </tr>
            </thead>
            <tbody>
                 @foreach (var item in Model.MisMedicamentos)
                {   
                    <tr class="row100 body">
                        <td class="cell100 column7"><b>Fecha de inicio:</b></td>
                        <td class="cell100"> @Html.DisplayFor(modelItem => item.Init)</td>
                    </tr>
                    <tr class="row100 body">
                        <td class="cell100 column7"><b>Medicamento:</b></td>
                        <td class="cell100"> @Html.DisplayFor(modelItem => item.NombreMedicamento)</td>
                    </tr>
                    <tr class="row100 body">
                        <td class="cell100 column7"><b>Indicaciones:</b></td>
                        <td class="cell100"> @Html.DisplayFor(modelItem => item.Indicaciones)</td>
                    </tr>
                    <tr class="row100 body">
                        <td class="cell100 column7"><b>Fecha de fin:</b></td>
                        <td class="cell100"> @Html.DisplayFor(modelItem => item.Finish)</td>
                    </tr>
                    <tr>
                    <td colspan="2"><hr></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
