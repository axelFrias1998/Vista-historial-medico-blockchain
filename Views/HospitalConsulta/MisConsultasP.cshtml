@model Vista_historial_medico_blockchain.Models.MiCalendarioConsultasDTO
@{
    ViewData["Title"] = "Home Page";
}

<h3>Tus consultas</h3>
    <div class="table100 ver1 m-b-110">
	    <div class="table100-head">
            <table >
                <thead>
                <tr class="row100 head">
                    <th class="cell100 column12" >Nombre Doctor</th>
                    <th class="cell100 column12" >Hospital</th>
                    <th class="cell100 column13" >Fecha </th>
                </tr>
                </thead>
                <tbody>	
                @foreach (var item in Model.MisConsultas)
                {
                <tr class="row100 body">
                    <td class="cell100 column12">@Html.DisplayFor(modelItem => item.NombreDoctor)</td>
                    <td class="cell100 column12"> @Html.DisplayFor(modelItem => item.NombreHospital)</td>
                    <td class="cell100 column13"> @Html.DisplayFor(modelItem => item.FechaConsulta)</td>
                </tr>
                }	   
                </tbody>
            </table>	
	    </div>
    </div>
<br><br>

<h3>Tus medicamentos</h3>
    <div class="table100 ver1 m-b-110">
	    <div class="table100-head">
            <table >
                <thead>
                <tr class="row100 head">
                    <th class="cell100 column13" >Fecha de inicio</th>
                    <th class="cell100 column9" >Medicamento</th>
                    <th class="cell100 column9" >Indicaciones</th>
                    <th class="cell100 column13" >Fecha de fin</th>
                </tr>
                </thead>
                <tbody>	
                @foreach (var item in Model.MisMedicamentos)
                {   
                <tr class="row100 body">
                    <td class="cell100 column13"> @Html.DisplayFor(modelItem => item.Init)</td>
                    <td class="cell100 column9"> @Html.DisplayFor(modelItem => item.NombreMedicamento)</td>
                    <td class="cell100 column9"> @Html.DisplayFor(modelItem => item.Indicaciones)</td>
                    <td class="cell100 column13"> @Html.DisplayFor(modelItem => item.Finish)</td>
                </tr>
                } 
                </tbody>
            </table>	
	    </div>
    </div>
