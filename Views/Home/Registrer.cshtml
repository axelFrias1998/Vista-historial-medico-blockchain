                                        <input type="text" id="userName" name="userName" class="form-control" required placeholder="Username">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="password" name="password" class="form-control" required placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required placeholder="Confirmar Password">
                                    </div>
                                    <div class="form-group">
                                        <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" required placeholder="Telefono">
