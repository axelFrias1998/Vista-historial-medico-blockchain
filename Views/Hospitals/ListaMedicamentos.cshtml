@model IEnumerable<Vista_historial_medico_blockchain.Models.HospitalMedicamentosDTO>
@{
    ViewData["Title"] = "Medicamentos registrados";
}

<br><h1>Medicamentos registrados</h1>
<div class="table100 ver1 m-b-110">
  <div class="table100-head">
    @foreach (var item in Model)
    {
      <table>
        <thead>
          <tr class="row100 head">
            <th class="cell100">Nombre del medicamento: </th>
            <th class="cell100" colspan="2">@Html.DisplayFor(model => item.nombreMedicamento)</th>
          </tr>
        </thead>
        <tbody>
          <tr class="row100 body">
            <td class="cell100" colspan="3"><strong>Descripción:</strong>@Html.DisplayFor(model => item.descripcion)</td>
          </tr>
          <tr class="row100 body">
            <td class="cell100" colspan="3"><strong>Indicaciones:</strong>@Html.DisplayFor(model => item.indicaciones)</td>
          </tr>
          <tr class="row100 body">
            <td class="cell100" colspan="3"><strong>Vía de administración:</strong>@Html.DisplayFor(model => item.viaAdministracion)</td>
          </tr>
          <tr class="row100 body">
            <td class="cell100" colspan="3"><strong>Grupo de medicamentos:</strong>@Html.DisplayFor(model => item.grupoMedicamentos)</td>
          </tr>
          <tr class="row100 body">
            <td class="cell100" colspan="3"><strong>Precauciones:</strong>@Html.DisplayFor(model => item.precauciones)</td>
          </tr>
          <tr class="row100 body">
            <td class="cell100" colspan="3"><strong>Efectos secundarios:</strong>@Html.DisplayFor(model => item.efectosSecundarios)</td>
          </tr>
          <tr class="row100 body">
            <td class="cell100 column8">
              <data-placement="top" data-toggle="tooltip" title="Edit">
                @Html.ActionLink("Eliminar", "BorrarMedicamento", new { id = item.id })
            </td>
          </tr>
        </tbody>	
      </table>
      <br>
    }
  </div>
</div>

<br>
