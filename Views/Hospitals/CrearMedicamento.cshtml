@model Vista_historial_medico_blockchain.Models.HospitalMedicamentosCreateDTO

@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  <div class="modal-header">
    <h4 class="modal-title custom_align" id="Heading">Crear nuevo Medicamento</h4>
  </div>
  <div class="modal-body">
    <div class="form-group">
      @Html.EditorFor(model => model.nombreMedicamento, new { htmlAttributes = new { @class = "form-control", placeholder="Nombre del medicamento"} })
      @Html.ValidationMessageFor(model => model.nombreMedicamento, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control", placeholder="Descripción"} })
      @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.EditorFor(model => model.indicaciones, new { htmlAttributes = new { @class = "form-control", placeholder="Indicaciones"} })
      @Html.ValidationMessageFor(model => model.indicaciones, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.EditorFor(model => model.viaAdministracion, new { htmlAttributes = new { @class = "form-control", placeholder="Via de administración"} })
      @Html.ValidationMessageFor(model => model.viaAdministracion, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.DropDownListFor(model => model.grupoMedicamentosId, (IEnumerable<SelectListItem>)ViewBag.GrupoMedicamentos, "Grupo de medicamentos" , new { @class = "form-control", @onChange = "SelectedValue(this)" })
    </div>
    <div class="form-group">
      @Html.EditorFor(model => model.precauciones, new { htmlAttributes = new { @class = "form-control", placeholder="Precauciones"} })
      @Html.ValidationMessageFor(model => model.precauciones, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
      @Html.EditorFor(model => model.efectosSecundarios, new { htmlAttributes = new { @class = "form-control", placeholder="Efectos Secundarios"} })
      @Html.ValidationMessageFor(model => model.efectosSecundarios, "", new { @class = "text-danger" })
    </div>
  </div>
  <div class="modal-footer ">
    <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Crear</button>
  </div>
}

