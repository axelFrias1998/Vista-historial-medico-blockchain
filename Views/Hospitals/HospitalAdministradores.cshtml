@model Vista_historial_medico_blockchain.Models.HospitalAdminsInfo
@{
    ViewData["Title"] = "Administradores de hospital";
}
<br>
<h1>Administradores del Hospital</h1>
<div class="table100 ver1 m-b-110">
  <div class="table100-head">
    <table>
      <thead>
        <tr class="row100 head">
          <th style="text-align: center;" class="cell100 column2"><h5>Nombre</h5></th>
          <th style="text-align: center;" class="cell100 column2"><h5>Apellido</h5></th>
          <th style="text-align: center;" class="cell100 column2"><h5>Borrar</h5></th>
        </tr>
      </thead>
    </table>
  </div>

  <div class="table100-body ">
    <table>
      <tbody>
        @foreach (var item in Model.Admins)
        {
          <tr>
            <td style="text-align: center;" class="cell100 column2"> 
              <h6>@Html.DisplayFor(modelItem => item.Nombre)</h6></td> 
            <td style="text-align: center;" class="cell100 column2">
              <h6>@Html.DisplayFor(modelItem => item.Apellido)</h6></td> 
            <td style="text-align: center;" class="cell100 column2">
              <data-placement="top" data-toggle="tooltip" title="Borrar">
              <h6>@Html.ActionLink("Borrar", "BorrarAdministrador", new { adminId = item.AdminId, hospitalId = Model.HospitalId })</h6>
            </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>

<center>
  <br>
  <div class="btn-group">
    <center><data-placement="top" data-toggle="tooltip" title="regresar"><a asp-controller="Hospitals" asp-action="Index"><button style='width:140px; height:50px' class="btn btn-lg btn-primary btn-block">Regresar</button></a></center>&nbsp;&nbsp;&nbsp;
    <center><data-placement="top" data-toggle="tooltip" title="new"><button style='width:140px; height:50px; color:white;' class="btn btn-lg btn-primary btn-block">@Html.ActionLink("Agregar", "AgregarAdministrador", new { hospitalId = Model.HospitalId })</button></a></center>
  </div>
</center>
<br><br><br>
