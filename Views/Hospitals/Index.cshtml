@model IEnumerable<Vista_historial_medico_blockchain.Models.HospitalInfo>
  @{
    ViewData["Title"] = "Hospitales registrados";
}
<br>
<h1>Hospitales registrados</h1>
<div class="table100 ver1 m-b-110">
  <div class="table100-head">
    <div class="table-responsive"> 
      <table>
        <thead>
          <tr class="row100 head">
            <th class="cell100"><h5>Nombre</h5></th>
            <th class="cell100"><h5>Número de teléfono</h5></th>
            <th class="cell100"><h5>Fecha de registro</h5></th>
            <th class="cell100"><h5>Administradores</h5></th>
            <th class="cell100"><h5>Especialidades</h5></th>
            <th class="cell100"><h5>Tipo de Servicio</h5></th>
            <th class="cell100"><h5>Editar | Deshabilitar</h5></th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
          <tr>
            <td style="display:none;">@Html.DisplayFor(modelItem => item.hospitalId)</td>
            <td><h6>@Html.DisplayFor(modelItem => item.Name)</h6></td>
            <td><h6>@Html.DisplayFor(modelItem => item.PhoneNumber)</h6></td>
            <td><h6>@Html.DisplayFor(modelItem => item.registerDate)</h6></td>
            <td><data-placement="top" data-toggle="tooltip" title="Edit">
                <h6>@Html.ActionLink("Ver más", "GetViewAdmin", new { id = item.hospitalId } )</h6></td>
            <td><data-placement="top" data-toggle="tooltip" title="Edit">
                <h6>@Html.ActionLink("Ver más", "GetViewEspecialities", new { id = item.hospitalId })</h6></td>
            <td>@Html.DisplayFor(modelItem => item.servicesCatalog.Type)</td>
            <td>          
              <data-placement="top" data-toggle="tooltip" title="Edit">
                <h6>@Html.ActionLink("Editar", "EditTipoMedicamento", new { id = item.hospitalId } ) |
              <data-placement="top" data-toggle="tooltip" title="Edit">
                    @Html.ActionLink("Eliminar", "DeleteMedicamentos", new { id = item.hospitalId } )</h6>
            </td>
          </tr>
          }
          </tbody>
      </table>
    </div> 
  </div>  
</div>             

<br>
<div class="btn-group">
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <center><data-placement="top" data-toggle="tooltip" title="Regresar"><a asp-controller="Panels" asp-action="Menu"><button style='width:140px; height:50px' class="btn btn-lg btn-primary btn-block">Regresar</button></a></center> &nbsp;&nbsp;&nbsp;&nbsp;
    <center><data-placement="top" data-toggle="tooltip" title="Agregar"><a asp-controller="Hospitals" asp-action="Create"><button style='width:140px; height:50px' class="btn btn-lg btn-primary btn-block">Agregar</button></a></center> 
</div>



<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Editar Detalles</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Nombre">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Telefono">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Fecha de registro">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Nombre">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Apellido">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Email">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Tipo">
        </div>
        <div class="form-group">
          <input class="form-control " type="text" placeholder="Admin">
        </div>
      </div>
      <div class="modal-footer ">
        <button type="button" class="btn btn-primary btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Guardar</button>
      </div>
    </div> 
  </div> 
</div>
    
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        <h4 class="modal-title custom_align" id="Heading">Deshabilitar Hospital</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span>¿Esta seguro que desea deshabilitar este hospital?</div>
      </div>
      <div class="modal-footer ">
        <button type="button" class="btn btn-success" ><span class="glyphicon glyphicon-ok-sign"></span> Si</button>
        <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
    </div>
  </div> 
</div>
    
<script>
  $(document).ready(function(){
    $("#mytable #checkall").click(function () {
      if ($("#mytable #checkall").is(':checked')) {
        $("#mytable input[type=checkbox]").each(function () {
          $(this).prop("checked", true);
        });
      } 
      else {
        $("#mytable input[type=checkbox]").each(function () {
          $(this).prop("checked", false);
        });
      }
    });
    $("[data-toggle=tooltip]").tooltip();
  });
</script>