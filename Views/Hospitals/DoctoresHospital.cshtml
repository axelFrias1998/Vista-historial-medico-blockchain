            <td align="center" class="cell100 column13">
							<data-placement="top" data-toggle="tooltip" title="Borrar">&nbsp;&nbsp;&nbsp;
							<h6>@Html.ActionLink("Borrar", "EliminarDoctor", new { doctorId = item.DoctorId } )</h6> 
