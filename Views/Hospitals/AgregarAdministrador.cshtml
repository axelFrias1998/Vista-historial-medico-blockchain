@model Vista_historial_medico_blockchain.Models.HospitalAdminInfo

@{
    ViewData["Title"] = "Agregar Administrador";
}

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
    <h4 class="modal-title custom_align" id="Heading"> Agregar administrador</h4>
  </div>
  <div class="modal-body">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => Model.HospitalId)
    <div class="form-group">
      @Html.DropDownListFor(model => model.AdminId, (IEnumerable<SelectListItem>)ViewBag.Admins, "Administrador disponible" , new { @class = "form-control", @onChange = "SelectedValue(this)" })
    </div>
  </div>
  <div class="modal-footer ">
    <button type="submit" class="btn btn-primary btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span>Agregar</button>
  </div>
}