					<td class="cell100 column7">@Html.DisplayFor(modelItem => item.Type)</td>
					<td class="cell100 column8">
						<data-placement="top" data-toggle="tooltip" title="Edit">
							<h6>@Html.ActionLink("Editar", "EditSpecia", new { id = item.Id }) |
						<data-placement="top" data-toggle="tooltip" title="Edit">
							@Html.ActionLink("Eliminar", "Delete", new { id = item.Id })</h6>
