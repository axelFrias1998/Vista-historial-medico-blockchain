@{
    ViewData["Title"] = "Home Page";
}

<section id="services" class="services">
  <div class="container">
    <center>
    <div class="section-title">
      <br><h2>¡Bienvenido _________!</h2>
      <br><p>Este es el panel en donde podrás realizar las siguentes actividades:</p><br><br>
    </div>

    <div class="row">
